set visualbell
set hlsearch
set ignorecase
set incsearch

set clipboard+=unnamed
set clipboard+=ideaput

nnoremap \e :e ~/.ideavimrc<CR>
nnoremap \rr :action IdeaVim.ReloadVimRc.reload<CR>
nnoremap <c-z> :action ToggleDistractionFreeMode<CR>

nnoremap <c-t> :action ActivateTerminalToolWindow<CR>
nnoremap <leader>t :action Terminal.OpenInTerminal<CR>

:map <leader>1 <Action>(GoToTab1)
:map <leader>2 <Action>(GoToTab2)
:map <leader>3 <Action>(GoToTab3)
:map <leader>4 <Action>(GoToTab4)
:map <leader>5 <Action>(GoToTab5)
:map <leader>6 <Action>(GoToTab6)
:map <leader>7 <Action>(GoToTab7)
:map <leader>8 <Action>(GoToTab8)
:map <leader>rc <Action>(ReformatCode)
:map <leader>sp <Action>(Android.SyncProject)
:map <leader>b <Action>(Run)
:map <leader>l <c-w>l
:map <leader>h <c-w>h
:map <leader>j <c-w>j
:map <leader>k <c-w>k
:map <leader>w <c-w>w
:map <leader>c <Action>(CommentByLineComment)
:map <leader>sf <Action>(NewScratchFile)
:map <leader>p <Action>(togglePowerModeII)
:map <leader>n <Action>(NewFromTemplate)
:map <leader>ws <Action>(WelcomeScreen.Settings)
